! Particles.f90 - Fortran module incorporating particle dynamics

module Particles

    implicit none
    
    private
    
    ! Public interface
    public  :: ParticlePoolType
    
    ! Data types
    type ParticlePoolType
        real, dimension(:), allocatable     :: rvPartX
        real, dimension(:), allocatable     :: rvPartY
        real, dimension(:), allocatable     :: rvPartU
        real, dimension(:), allocatable     :: rvPartV
        real, dimension(:), allocatable     :: rvDelta
        logical, dimension(:), allocatable  :: lvPartIsActive
    contains
        procedure   :: init
    end type ParticlePoolType
    
contains

    function init(this) result(iRetCode)
    
        ! Routine arguments
        class(ParticlePoolType), intent(out)    :: this
        integer                                 :: iRetCode
        
        ! Locals
        
        ! Assume success (will falsify on failure
        iRetCode = 0
        
    end function init

end module Particles
